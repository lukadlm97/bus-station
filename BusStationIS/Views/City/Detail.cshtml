@model BusStationIS.Models.CityDetailModel

<div class="container">
    <div class="page-header clearfix datailHeading">
        <h2 class="text-muted">View City Item</h2>
    </div>
</div>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-4">
            <div>
                <img class="detailImage" src="@Model.ImageUrl" />
            </div>
        </div>
        <div class="col-md-4">
            <p id="itemName">@Model.Name</p>
            <p id="itemZip">@Model.ZipCode</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <h4>Bus Stations</h4>
        <table class="table table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>Address</th>
                    <th>Contacts</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var station in Model.BusStations)
                {
                    <tr>
                        <td>@station.Address.StreetName br.@station.Address.StreetNumber .</td>
                        <td>@station.Contacts.ToString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-6">
        <h4>Carrier</h4>
        <table class="table table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Contact</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var carrier in Model.Carriers)
                {
                    <tr>
                        <td>@carrier.Name</td>
                        <td>@carrier.Address.StreetName br.@carrier.Address.StreetNumber .</td>
                        <td>@carrier.Contacts.ToString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

