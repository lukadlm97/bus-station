@model BusStationIS.Models.City.AllCities;
@{
    ViewData["Title"] = "Create";
}


<div class="container">
    <div class="page-header clearfix datailHeading">
        <h2 class="text-info">Create New Carrier</h2>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-8">



        <div class="border">
            <form method="post">
                <div class="container" style="padding:30px;background-color:lightskyblue;">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Carrier Name:</label>
                            </div>
                            <div class="col-sm-4">
                                <input name="carrierName" type="text" class="form-control" />
                            </div>
                            <span class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label>City Name:</label>
                            </div>
                            <div class="col-sm-4">
                               <select class="form-group selcls">
                                   @foreach(var city in Model.Citys)
                                   {
                                       <option>@city.Name</option>
                                   }
                               </select>
                            </div>
                            <span class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Street Name:</label>
                            </div>
                            <div class="col-sm-4">
                                <input name="streetName" type="text" class="form-control" />
                            </div>
                            <span class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Street Number:</label>
                            </div>
                            <div class="col-sm-4">
                                <input name="streetNumber" type="number" class="form-control" />
                            </div>
                            <span class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 offset-sm-2">
                                <input type="submit" value="Create" class="btn btn-primary form-control" />
                            </div>
                            <div class="col-sm-2">
                                <a asp-controller="Carrier" asp-action="Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


